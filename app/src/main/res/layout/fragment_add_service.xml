<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment.AddServiceFragment">

    <ImageView
        android:id="@+id/backservice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"
        android:contentDescription="@string/back_button_description" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backservice1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:text="Add"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textVechile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backservice1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:text="       Service"
        android:textColor="@color/red"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_login"
        android:padding="20dp">

        <TextView
            android:id="@+id/Add_Vehicle_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/roboto_semibold"
            android:text="Add Service"
            android:textColor="@color/grey_text"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtServiceName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:width="325dp"
            android:background="@drawable/field_background"
            android:hint="Service Name"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtSparepartPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:width="325dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/field_background"
            android:hint="Service Price"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/txtQuantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:width="325dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/field_background"
            android:hint="Estimated Time"
            android:clickable="true"
            android:drawableEnd="@drawable/calendar_month"
            android:paddingLeft="15dp"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="370dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/frame1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:text="Save"
        android:textSize="18sp"/>



</RelativeLayout>